<Page x:Class="LinguaAI.Desktop.Pages.ReadingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Title="ReadingPage">
    <Grid Style="{DynamicResource PageBase}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button & Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="â¬…" Padding="10,5" Click="BackButton_Click" Style="{DynamicResource ModernButton}" Width="40"/>
            <TextBlock Text="Reading Practice" Style="{DynamicResource HeaderTitle}" Margin="20,0,0,20" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Controls -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <ComboBox x:Name="LevelComboBox" Width="120" SelectedIndex="1" VerticalContentAlignment="Center">
                <ComboBoxItem Content="beginner"/>
                <ComboBoxItem Content="intermediate"/>
                <ComboBoxItem Content="advanced"/>
            </ComboBox>
            <TextBox x:Name="TopicInput" Width="200" Margin="10,0" Padding="5" VerticalContentAlignment="Center" Text="Technology"/>
            <Button x:Name="GenerateButton" Content="Generate Reading" Padding="15,8" 
                    Background="#2563eb" Foreground="White"
                    Click="GenerateButton_Click"/>
        </StackPanel>

        <!-- Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/> <!-- Reading Text -->
                <ColumnDefinition Width="1*"/> <!-- Vocabulary & Quiz -->
            </Grid.ColumnDefinitions>

            <!-- Text -->
            <ScrollViewer Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock x:Name="TitleText" FontSize="24" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock x:Name="ContentText" FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Side Panel -->
            <ScrollViewer Grid.Column="1" Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock Text="Vocabulary" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                    <ItemsControl x:Name="VocabList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,8">
                                    <TextBlock Text="{Binding Word}" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Meaning}" FontStyle="Italic" Foreground="#6b7280"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <TextBlock Text="Quiz" FontWeight="Bold" FontSize="18" Margin="0,20,0,10"/>
                    <ItemsControl x:Name="QuizList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,0,0,15">
                                    <TextBlock Text="{Binding Question}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                                    <ListBox ItemsSource="{Binding Options}" BorderThickness="0" Background="Transparent" Margin="0,5,0,0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <RadioButton Content="{Binding}" GroupName="{Binding DataContext.Question, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"/>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ScrollViewer>

            <ProgressBar x:Name="LoadingBar" Grid.ColumnSpan="2" IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Center" Height="20" Width="200"/>
        </Grid>
    </Grid>
</Page>
