<Page x:Class="LinguaAI.Desktop.Pages.WritingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Title="WritingPage">
    <Grid Style="{DynamicResource PageBase}" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!-- Back Button & Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="⬅" Padding="10,5" Click="BackButton_Click" Style="{DynamicResource ModernButton}" Width="40"/>
            <TextBlock Text="Writing Practice" Style="{DynamicResource HeaderTitle}" Margin="20,0,0,20" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Input Area -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock Text="Write your text here:" FontWeight="SemiBold" VerticalAlignment="Center"/>
                <ComboBox x:Name="LevelComboBox" Width="120" Margin="10,0" SelectedIndex="1">
                    <ComboBoxItem Content="beginner"/>
                    <ComboBoxItem Content="intermediate"/>
                    <ComboBoxItem Content="advanced"/>
                </ComboBox>
            </StackPanel>

            <TextBox x:Name="WritingInput" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto" FontSize="16" Padding="10"
                     BorderBrush="#e5e7eb" BorderThickness="1"/>

            <Button x:Name="CheckButton" Grid.Row="2" Content="Check Writing" 
                    Margin="0,10,0,0" Padding="15,10" HorizontalAlignment="Right"
                    Background="#2563eb" Foreground="White"
                    Click="CheckButton_Click"/>
        </Grid>

        <!-- Results Area -->
        <ScrollViewer Grid.Row="2" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Feedback &amp; Corrections:" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"/>
                
                <!-- Corrected Text -->
                <TextBlock Text="Better Version:" FontWeight="SemiBold" Foreground="#059669" Margin="0,10,0,5"/>
                <TextBox x:Name="CorrectedText" IsReadOnly="True" TextWrapping="Wrap" 
                         Background="#f0fdf4" BorderThickness="0" Padding="10" FontSize="16"/>

                <!-- Detailed Corrections -->
                <TextBlock Text="Detailed Improvements:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <ItemsControl x:Name="CorrectionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" BorderBrush="#e5e7eb" BorderThickness="1" Margin="0,4" Padding="10" CornerRadius="4">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Original}" TextDecorations="Strikethrough" Foreground="#dc2626" Margin="0,0,10,0"/>
                                        <TextBlock Text="➜" Foreground="#6b7280" Margin="0,0,10,0"/>
                                        <TextBlock Text="{Binding Corrected}" FontWeight="Bold" Foreground="#059669"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Explanation}" Foreground="#4b5563" Margin="0,4,0,0" FontStyle="Italic"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Suggestions -->
                <TextBlock Text="Suggestions:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                <ItemsControl x:Name="SuggestionsList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Foreground="#4b5563" Margin="0,2" TextWrapping="Wrap">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="• {0}">
                                        <Binding Path="."/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

            </StackPanel>
        </ScrollViewer>
        
        <ProgressBar x:Name="LoadingBar" Grid.RowSpan="3" IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="20"/>

    </Grid>
</Page>
