<Page x:Class="LinguaAI.Desktop.Pages.VocabularyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Title="VocabularyPage"
      Style="{DynamicResource PageBase}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Back Button & Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="â¬…" Padding="10,5" Click="BackButton_Click" Style="{DynamicResource ModernButton}" Width="40"/>
            <TextBlock Text="Vocabulary Practice" Style="{DynamicResource HeaderTitle}" Margin="20,0,0,20" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Configuration -->
        <Border Grid.Row="1" Background="#f3f4f6" Padding="15" CornerRadius="8">
            <StackPanel>
                <TextBlock Text="Choose a Theme:" FontWeight="SemiBold" Margin="0,0,0,10"/>
                <ComboBox x:Name="ThemeComboBox" DisplayMemberPath="Name" SelectedValuePath="Id" Height="35" FontSize="14"/>
                
                <Button x:Name="GenerateButton" Content="Generate Vocabulary" 
                        Margin="0,20,0,0" Padding="15,8" HorizontalAlignment="Left"
                        Background="#2563eb" Foreground="White"
                        Click="GenerateButton_Click"/>
            </StackPanel>
        </Border>

        <!-- Results List -->
        <ListView x:Name="VocabularyList" Grid.Row="2" Margin="0,20,0,0" BorderThickness="0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="White" BorderBrush="#e5e7eb" BorderThickness="1" Margin="0,4" Padding="10" CornerRadius="4">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Word}" FontWeight="Bold" FontSize="16" Foreground="#111827"/>
                                <TextBlock Text="{Binding Pronunciation}" FontStyle="Italic" Foreground="#6b7280" Margin="10,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="{Binding Meaning}" Foreground="#4b5563" Margin="0,4"/>
                            <TextBlock Text="{Binding Example}" Foreground="#6b7280" FontSize="13" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ProgressBar x:Name="LoadingBar" Grid.Row="2" IsIndeterminate="True" Visibility="Collapsed" VerticalAlignment="Top" Margin="0,10,0,0"/>
    </Grid>
</Page>
