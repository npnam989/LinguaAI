<Page x:Class="LinguaAI.Desktop.Pages.ConversationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Title="ConversationPage">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <Button Content="â¬… Dashboard" Padding="10,5" Click="BackButton_Click"/>
            <TextBlock Text="Conversation Practice" FontSize="20" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>
            <ComboBox x:Name="ScenarioComboBox" Width="150" Margin="20,0,0,0" SelectedIndex="0" VerticalAlignment="Center">
                <ComboBoxItem Content="General Chat"/>
                <ComboBoxItem Content="Restaurant"/>
                <ComboBoxItem Content="Travel"/>
                <ComboBoxItem Content="Shopping"/>
            </ComboBox>
        </StackPanel>

        <!-- Chat History -->
        <Border Grid.Row="1" BorderBrush="#e5e7eb" BorderThickness="1" CornerRadius="4" Padding="10">
            <ScrollViewer x:Name="ChatScrollViewer">
                <StackPanel x:Name="ChatPanel"/>
            </ScrollViewer>
        </Border>

        <!-- Input Area -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="MessageInput" FontSize="16" Padding="10" 
                     KeyDown="MessageInput_KeyDown" VerticalContentAlignment="Center"/>
            
            <Button x:Name="MicButton" Grid.Column="1" Content="ðŸŽ¤" Width="50" Margin="10,0"
                    Background="#f3f4f6"  FontSize="20"
                    Click="MicButton_Click"/>
            
            <Button x:Name="SendButton" Grid.Column="2" Content="Send" Padding="20,10"
                    Background="#2563eb" Foreground="White" FontWeight="Bold"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Page>
