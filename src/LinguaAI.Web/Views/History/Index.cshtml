@{
    ViewData["Title"] = "Lịch sử hoạt động";
    var actionLogs = ViewBag.ActionLogs as List<LinguaAI.Common.Models.UserActionLog>;
    var aiLogs = ViewBag.AILogs as List<LinguaAI.Common.Models.AIResponseLog>;
}

<div class="container mt-4">
    <ul class="nav nav-tabs" id="historyTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="action-tab" data-bs-toggle="tab" data-bs-target="#action" type="button" role="tab">Hoạt động người dùng</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="ai-tab" data-bs-toggle="tab" data-bs-target="#ai" type="button" role="tab">Lịch sử AI Chat</button>
        </li>
    </ul>

    <div class="tab-content mt-3" id="historyTabsContent">
        <div class="tab-pane fade show active" id="action" role="tabpanel">
            @if (actionLogs?.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Thời gian</th>
                            <th>Hành động</th>
                            <th>Chi tiết</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in actionLogs)
                        {
                            <tr>
                                <td>@log.Timestamp.ToLocalTime()</td>
                                <td>@log.ActionType</td>
                                <td>@log.Details</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Chưa có lịch sử hoạt động.</p>
            }
        </div>
        <div class="tab-pane fade" id="ai" role="tabpanel">
            @if (aiLogs?.Count > 0)
            {
                <div class="list-group">
                @foreach (var log in aiLogs)
                {
                    <div class="list-group-item">
                        <div class="d-flex w-100 justify-content-between">
                            <h5 class="mb-1">@log.RequestType</h5>
                            <small>@log.Timestamp.ToLocalTime()</small>
                        </div>
                        <p class="mb-1"><strong>Prompt:</strong> @log.RequestPrompt</p>
                        <p class="mb-1 text-muted"><strong>Response:</strong> @(log.AIResponse.Length > 200 ? log.AIResponse.Substring(0, 200) + "..." : log.AIResponse)</p>
                    </div>
                }
                </div>
            }
            else
            {
                <p>Chưa có lịch sử AI.</p>
            }
        </div>
    </div>
</div>
